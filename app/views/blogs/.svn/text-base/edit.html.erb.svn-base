<h1>Editing blog</h1>
<%= link_to 'Back', blogs_path%>
<%= form_for :blog, url: blog_path(@blog.id), method: :patch do |b|%>
<% if @blog.errors.any? %>
<div id="errorExplanation">
	<h2><%= pluralize(@blog.errors.count, "error")%> prohibited
	this post from being saved:</h2>
	<ul>
		<% @blog.errors.full_messages.each do |msg| %>
		<li>
			<%= msg%>
		</li>
		<% end %>
	</ul>
</div>
<% end %>
<p>
	<%= b.label :title%>
	<%= b.text_field :title%>
</p>
<p>
	<%= b.label :content%>
	<%= b.text_area :content%>
</p>
<p>
	<%= b.submit%>
</p>
<% end %>
